<?xml version="1.0" encoding="UTF-8"?>
<plugin_manifest xmlns="http://www.elgg.org/plugin_manifest/1.8">
	<name>Facyla - Blogs externes</name>
	<author>Facyla 2012</author>
	<version>0.3</version>
	<blurb>Blogs externes depuis un intranet</blurb>
	<description>Permet de publier des articles sous la forme d'un blog "externe" depuis un intranet, sur la base de critères de sélection précis (liste de type de contenu, d'auteurs, de groupes, de tags), et dans un template configurable.</description>
	<website>http://sfprojex.net/</website>
	<copyright>(C) Facyla 2012-2013</copyright>
	<license>GNU Public License version 2</license>

	<requires>
		<type>elgg_version</type>
		<version>2009030802</version>
	</requires>

	<requires>
		<type>elgg_release</type>
		<version>1.8.8</version>
	</requires>

	<screenshot>
		<description>An example screenshot</description>
		<path>graphics/plugin_ss1.png</path>
	</screenshot>

	<category>blog</category>
	<category>access</category>
	<category>other</category>
	
	<activate_on_install>false</activate_on_install>
	
</plugin_manifest>


