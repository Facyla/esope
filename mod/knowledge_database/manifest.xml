<?xml version="1.0" encoding="UTF-8"?>
<plugin_manifest xmlns="http://www.elgg.org/plugin_manifest/1.8">
	<name>Knowledge Database</name>
	<author>Florian DANIEL aka Facyla</author>
	<version>0.5</version>
	<blurb>Knowledge Database (ALPHA)</blurb>
	<description>This plugin extends objects with structured fields, so your Elgg site can be used as a Knowledge Database. This feature can be enabled for the whole site, or in specific groups, and provides a public interface for searching and accessing these documents. WARNING : this plugin is still in its very early stage, and eager to evolve. Please do not use on a production site without great care !</description>
	<website>http://facyla.fr/</website>
	<license>GNU Public License version 2</license>
	<requires>
		<type>elgg_release</type>
		<version>1.8.14</version>
	</requires>

	<requires>
		<type>plugin</type>
		<name>adf_public_platform</name>
	</requires>
	
	<suggests>
		<type>plugin</type>
		<name>file</name>
	</suggests>
	<suggests>
		<type>plugin</type>
		<name>pages</name>
	</suggests>
	<suggests>
		<type>plugin</type>
		<name>bookmarks</name>
	</suggests>
	<suggests>
		<type>plugin</type>
		<name>blog</name>
	</suggests>
	<suggests>
		<type>plugin</type>
		<name>pages</name>
	</suggests>

	<activate_on_install>false</activate_on_install>
</plugin_manifest>

