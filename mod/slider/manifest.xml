<?xml version="1.0" encoding="UTF-8"?>
<plugin_manifest xmlns="http://www.elgg.org/plugin_manifest/1.8">
	<name>Slider</name>
	<author>Florian DANIEL aka Facyla</author>
	<version>0.8</version>
	<blurb>Slider plugin : custom slides for any content</blurb>
	<description>Activez ce plugin si vous souhaitez disposer de sliders configurables, pour les administrateurs, et éventuellement les membres. Ce slider permet d'utiliser tout type de contenu : images, mais aussi texte, HTML, vidéos, etc. 5 types de sliders fournis, certains avec thèmes : AnythingSlider, NivoSlider, FlexSlider, ResponsiveSlides et CoinSlider</description>
	<website>http://facyla.fr/</website>
	<copyright>Facyla 2016, Items International 2013-2015</copyright>
	<license>GNU Public License version 2</license>
	<requires>
		<type>elgg_release</type>
		<version>1.12</version>
	</requires>
	
	<category>admin</category>
	<category>theme</category>
	<category>content</category>
	<category>slider</category>
	
	<suggests>
		<type>plugin</type>
		<name>cmspages</name>
	</suggests>
	<suggests>
		<type>plugin</type>
		<name>shortcodes</name>
	</suggests>
	<suggests>
		<type>plugin</type>
		<name>esope</name>
	</suggests>
	
	<activate_on_install>false</activate_on_install>
</plugin_manifest>

