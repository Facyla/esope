<?xml version="1.0" encoding="UTF-8"?>
<plugin_manifest xmlns="http://www.elgg.org/plugin_manifest/1.8">
	<name>Prevent notifications</name>
	<id>prevent_notifications</id>
	<author>Florian DANIEL aka Facyla 2016 ~ Items International 2013</author>
	<version>1.12.0</version>
	<blurb>Prevent notifications - désactive ponctuellement les notifications</blurb>
	<description>Permet de désactiver l'envoi de notification lors de la création de contenus (ou de toute action générant une notification), au choix de l'éditeur.</description>
	<website>https://reseau-iris.inria.fr/</website>
	<copyright>Items International (Facyla), Inria</copyright>
	<license>GNU Public License version 2</license>
	
	<category>admin</category>
	<category>notifications</category>
	<category>functional adaptations</category>
	
	<requires>
		<type>elgg_release</type>
		<version>1.12</version>
	</requires>
	
	<requires>
		<type>priority</type>
		<plugin>file_tools</plugin>
		<priority>after</priority>
	</requires>
	
	<activate_on_install>false</activate_on_install>
	
</plugin_manifest>

