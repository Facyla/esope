	"require": {
		"composer/installers": "~1.0",
		
		"Facyla/cmspages": "2.3.*",
		"Facyla/notification_messages": "2.3.*",
		"Facyla/survey": "2.3.*",
		"Facyla/access_icons": "2.3.*",
		"Facyla/plugin_template": "2.3.*",
		"Facyla/slider": "2.3.*",
		"Facyla/shorturls": "2.3.*",
		"Facyla/socialshare": "2.3.*",
		"Facyla/registration_filter": "2.3.*",
		"Facyla/qrcode": "2.3.*",
		"Facyla/prevent_notifications": "2.3.*",
		
		"ColdTrick/advanced_statistics": "*",
		"ColdTrick/digest": "*",
		"ColdTrick/file_tools": "*",
		"ColdTrick/html_email_handler": "*",
		"ColdTrick/newsletter": "*",
		"ColdTrick/profile_manager": "^11",
		
		"Srokap/code_review": "^11"
