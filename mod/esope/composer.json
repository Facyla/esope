	"extra": {
		"installer-name": "esope",
		"installer-paths": {
			"../cmspages": ["facyla/cmspages"],
			"../cmspages": ["facyla/notification_messages"],
			"../cmspages": ["facyla/survey"],
			"../cmspages": ["facyla/access_icons"],
			"../cmspages": ["facyla/plugin_template"],
			"../cmspages": ["facyla/slider"],
			"../cmspages": ["facyla/shorturls"],
			"../cmspages": ["facyla/socialshare"],
			"../cmspages": ["facyla/registration_filter"],
			"../cmspages": ["facyla/qrcode"],
			"../cmspages": ["facyla/prevent_notifications"],
			
			"../advanced_statistics": ["coldtrick/advanced_statistics"],
			"../digest": ["coldtrick/digest"],
			"../file_tools": ["coldtrick/file_tools"],
			"../html_email_handler": ["coldtrick/html_email_handler"],
			"../newsletter": ["coldtrick/newsletter"],
			"../profile_manager": ["coldtrick/profile_manager"],
			"../code_review": ["srokap/code_review"]
