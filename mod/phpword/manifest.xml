<?xml version="1.0" encoding="UTF-8"?>
<plugin_manifest xmlns="http://www.elgg.org/plugin_manifest/1.8">
	<name>PHPWord</name>
	<id>phpword</id>
	<author>Florian DANIEL aka Facyla</author>
	<version>0.1</version>
	<blurb>PHPWord library</blurb>
	<description>You can use this plugin to generate Word documents from site content.</description>
	<website>http://facyla.fr/</website>
	<copyright>Florian DANIEL aka Facyla 2016</copyright>
	<license>GNU Public License version 2</license>
	
	<screenshot>
		<description>Screenshot</description>
		<path>graphics/screenshot.png</path>
	</screenshot>

	<category>content</category>
	
	<requires>
		<type>elgg_release</type>
		<version>1.12</version>
	</requires>
	
	<requires>
		<type>php_version</type>
		<version>5.3</version>
	</requires>
	
	<requires>
		<type>php_extension</type>
		<name>zip</name>
	</requires>
	<requires>
		<type>php_extension</type>
		<name>xml</name>
	</requires>
	
	<suggests>
		<type>php_extension</type>
		<name>xsl</name>
	</suggests>
	<suggests>
		<type>php_extension</type>
		<name>gd</name>
	</suggests>
	<suggests>
		<type>php_extension</type>
		<name>xmlwriter</name>
	</suggests>
	
