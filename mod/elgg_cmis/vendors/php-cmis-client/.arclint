{
  "linters": {
    "JavaScript Linter": {
      "type": "jshint",
      "include": "(\\.js$)"
    },
    "Merge Conflict detection": {
      "type": "merge-conflict"
    },
    "PHP Codesniffer": {
      "type": "phpcs",
      "bin": "vendor/bin/phpcs",
      "flags": ["--standard=PSR2"],
      "include": "(\\.php$)"
    },
    "English spelling": {
      "type": "spelling"
    },
    "Basic text linter for line length, encoding, trailing whitespace ...": {
      "type": "text",
      "exclude": "(^composer.lock$|.php$)"
    }
  }
}
